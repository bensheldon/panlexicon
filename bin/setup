#!/usr/bin/env ruby
require 'pathname'
require 'fileutils'
include FileUtils

# path to your application root.
APP_ROOT = Pathname.new File.expand_path('../../', __FILE__)

def system!(*args, message: nil)
  message ||= "Command #{args} failed"
  system(*args) || abort("\n== #{message} ==")
end

chdir APP_ROOT do
  puts '== Installing Ruby dependencies =='
  system! 'gem install bundler --conservative'
  system('bundle check') || system!('bundle install')

  puts '== Confirming Google Chrome and Chromedriver =='
  system! 'chromedriver -v', message: "Please install Goolge Chrome and Chromedriver e.g. `brew install chromedriver`"
  
  puts "\n== Preparing database =="
  system! 'bin/rails db:setup'

  puts "\n== Downloading Thesaurus =="
  system! 'bin/rails moby:thesaurus_db'

  puts "\n== Removing old logs and tempfiles =="
  system! 'bin/rails log:clear tmp:clear'

  puts "\n== Restarting application server =="
  system! 'bin/rails restart'
end
