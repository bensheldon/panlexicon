{
  "name": "panlexicon-rails",
  "scripts": {
    "postdeploy": "bin/rails moby:thesaurus_db"
  },
  "env": {
    "RACK_ENV": {
      "required": true
    },
    "RAILS_ENV": {
      "required": true
    },
    "SECRET_KEY_BASE": {
      "generator": "secret"
    },
    "HEROKU_PARENT_APP_NAME": {
      "required": true
    },
    "HEROKU_APP_NAME": {
      "required": true
    },
    "RAILS_MAX_THREADS": "2",
    "WEB_CONCURRENCY": "0"
  },
  "stack": "heroku-16",
  "formation": {},
  "addons": [
    {
      "plan": "heroku-postgresql:hobby-basic",
      "options": {
        "version": "10"
      }
    },
    {
      "plan": "heroku-redis:hobby-dev"
    }
  ],
  "buildpacks": [
    {
      "url": "heroku/ruby"
    }
  ]
}
